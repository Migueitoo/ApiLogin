@model ModeloCompurrent.ModeloLogin
@{
    ViewBag.Title = "Iniciar sesión";
}
<!--Script de validaciones para login-->
<script src="~/Scripts/ValidacionesFormularios.js"></script>
<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-heading" style="background-color: #FFB833">
                    <h3 class="panel-title text-center" style="font-family: 'Montserrat', sans-serif; font-weight: 600; letter-spacing: 0.1em; font-size: 30px;">INICIAR SESIÓN</h3>
                </div>
                <div class="panel-body text-center" style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size: 20px;">
                    @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                    {
                        @Html.ValidationSummary(false)
                        if (TempData["mensaje"] != null)
                        {
                            <script>alert('@TempData["mensaje"]');</script>
                        }

                        <div class="form-group col-lg-12">
                            @Html.LabelFor(m => m.Usuario, new { @class = "control-label" })
                            @Html.TextBoxFor(m => m.Usuario, new { @class = "form-control", type = "number", style = "width: 100%;" })
                        </div>

                        <div class="form-group col-lg-12">
                            @Html.LabelFor(m => m.Contrasena, "Contraseña",  new { @class = "control-label" })
                            @Html.PasswordFor(m => m.Contrasena, new { @class = "form-control", style = "width: 100%;" })
                        </div>

                        <div class="form-group">
                            <button type="submit" onclick="ValidarLogin(event)" class="btn btn-primary btn-lg">Iniciar sesión</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
